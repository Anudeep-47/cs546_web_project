<div id="booking-form" class="container">
  <div class="row align-items-center">
    <div class="col-6 mx-auto">
      <div class="card border-primary justify-content-center">
        <div class="card-body align-items-center">
          <form id="booking-form" action="{{action}}" method="post">
            <div class="row mb-4">
              <div class="col">
                <label for="firstname" class="form-label">First name</label>
                <input type="text" name="firstname" class="form-control" id="firstname"
                  value="{{data.patient_firstname}}" required />
              </div>
              <div class="col">
                <label for="lastname" class="form-label">Last name</label>
                <input type="text" name="lastname" class="form-control" id="lastname" value="{{data.patient_lastname}}"
                  required />
              </div>
              {{#if error.firstnameError}}
              <span id="name-error" class="text-danger">{{error.firstnameError}}</span>
              {{else if error.lastnameError}}
              <span id="name-error" class="text-danger">{{error.lastnameError}}</span>
              {{else}}
              <span id="name-error" class="text-danger"></span>
              {{/if}}
            </div>
            <div class="mb-4">
              <label for="gender" class="form-label">Gender</label>
              <select class="form-select" id="gender" name="gender">
                {{#if data.gender}}
                <option selected>{{data.gender}}</option>
                {{else}}
                <option selected>Gender</option>
                {{/if}}
                {{#each gender}}
                <option value="{{this}}">{{this}}</option>
                {{/each}}
              </select>
            </div>
            <div class="mb-4">
              <label for="isElse" class="form-label">Someone else</label>
              <select class="form-select" id="isElse" name="isElse">
                {{#if data.gender}}
                <option selected>{{data.someone_else}}</option>
                {{else}}
                <option selected>Someone else</option>
                {{/if}}
                {{#each isElse}}
                <option value="{{this}}">{{this}}</option>
                {{/each}}
              </select>
            </div>
            <div class="mb-4">
              <label for="number" class="form-label">Phone Number</label>
              <input type="number" name="number" class="form-control" id="number" value="{{data.phone_number}}"
                required />
              {{#if error.numberError}}
              <span id="number-error" class="text-danger">{{error.numberError}}</span>
              {{else}}
              <span id="number-error" class="text-danger"></span>
              {{/if}}
            </div>
            <div class="mb-4">
              <label for="reason" class="form-label">Reason for visit</label>
              <input type="reason" name="reason" class="form-control" id="reason" value="{{data.reason_for_visit}}"
                required />
            </div>
            <div class="mb-4">
              <label for="isNew" class="form-label">New patient</label>
              <select class="form-select" id="isNew" name="isNew">
                {{#if data.gender}}
                <option selected>{{data.new_patient}}</option>
                {{else}}
                <option selected>New patient</option>
                {{/if}}
                {{#each isNew}}
                <option value="{{this}}">{{this}}</option>
                {{/each}}
              </select>
            </div>
            <div class="mb-4">
              <label for="time" class="form-label">Appointment Time</label>
              <input type="time" name="time" class="form-control" id="time" value="{{data.appointment_time}}"
                required />
            </div>
            <div class="mb-4">
              <label for="notes" class="form-label">Notes to doctor</label>
              <input type="notes" name="notes" class="form-control" id="notes" value="{{data.notes_to_doctor}}" />
            </div>
            {{#if error}}
            <span id="error" hidden></span>
            {{/if}}
            <button type="submit" class="btn btn-primary mb-4">Submit</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>